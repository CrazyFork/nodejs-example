{
  "consul": "localhost:8500",
  "services": [
    {
      "name": "serializer",
      "port": {{.PORT}},
      "exec": "node /opt/app/",
      "health": "/usr/bin/curl -o /dev/null --fail -s http://localhost:{{.PORT}}/check-it-out",
      "poll": 3,
      "ttl": 10
    },
    {
      "name": "consul-agent",
      "exec": ["/usr/local/bin/consul", "agent",
                  "-data-dir=/data",
                  "-config-dir=/config",
                  "-log-level=err",
                  "-rejoin",
                  "-retry-join", "{{ if .CONSUL }}{{ .CONSUL }}{{ else }}consul{{ end }}",
                  "-retry-max", "10",
                  "-retry-interval", "10s"],
      "restarts": "unlimited"
    }
  ],
  "backends": [
    {
      "name": "influxdb",
      "poll": 3,
      "onChange": "pkill -SIGHUP node"
    }
  ],
  "telemetry": {
    "sensors": [
      {
        "namespace": "cp",
        "subsystem": "serializer",
        "name": "requests",
        "help": "Number of requests/s",
        "type": "gauge",
        "poll": 3,
        "check": ["/bin/sensors/request_count.sh"]
      }
    ]
  }
}
